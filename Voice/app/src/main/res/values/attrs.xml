<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer" />
        <attr name="textIsDisplayable" format="boolean" />
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
        <attr name="text" format="string" />
        <attr name="tipImg" format="reference" />
        <attr name="tipImgWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RecordView">
        <attr name="ringColor" format="color" />
        <attr name="ringProgressColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="ringWidth" format="dimension" />
        <attr name="maxProgress" format="integer" />
        <attr name="tipImg2" format="reference" />
        <attr name="tipImgWidth2" format="dimension" />
    </declare-styleable>
</resources>